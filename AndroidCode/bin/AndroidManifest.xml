<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arjonasoftware.mortgagecalculator"
    android:versionCode="6"
    android:versionName="1.2.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:name="com.arjonasoftware.mortgagecalculator.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.arjonasoftware.mortgagecalculator.DataActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.arjonasoftware.mortgagecalculator.ResultActivity"
            android:label="@string/title_activity_result"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.arjonasoftware.mortgagecalculator.DataActivity" />
        </activity>
        <activity
            android:name="com.arjonasoftware.mortgagecalculator.ImportantActivity"
            android:label="@string/title_activity_important"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>